<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.ChatFragment">

    <Spinner
        android:layout_margin="5dp"
        android:entries="@array/escola"
        android:id="@+id/spinner_escola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <ListView
        android:id="@+id/list_view_chat"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dip"></ListView>

    <android.support.v7.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:hint="Sua mensagem"
                android:id="@+id/edit_mensagem"
                android:inputType="textCapSentences"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/image_enviar"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_enviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>