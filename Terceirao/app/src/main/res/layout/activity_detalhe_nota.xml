<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetalheNotaActivity">

    <TextView
        android:id="@+id/text_view_detalhe_nome_disciplina"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/text_view_detalhe_nome_professor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView android:layout_width="wrap_content"
                    android:text="Nota 1"
                    android:layout_height="wrap_content"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/text_view_nota1"
                    android:layout_height="wrap_content"/>
            </TableRow>

            <TableRow>

                <TextView android:layout_width="wrap_content"
                    android:text="Nota 2"
                    android:layout_height="wrap_content"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/text_view_nota2"
                    android:layout_height="wrap_content"/>
            </TableRow>

            <TableRow>

                <TextView android:layout_width="wrap_content"
                    android:text="Nota 3"
                    android:layout_height="wrap_content"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/text_view_nota3"
                    android:layout_height="wrap_content"/>
            </TableRow>

            <TableRow>

                <TextView android:layout_width="wrap_content"
                    android:text="Nota 4"
                    android:layout_height="wrap_content"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/text_view_nota4"
                    android:layout_height="wrap_content"/>
            </TableRow>

        </TableLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView android:layout_width="wrap_content"
                    android:text="MÃ©dia"
                    android:layout_height="wrap_content"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:id="@+id/text_view_media"
                    android:layout_height="wrap_content"/>
            </TableRow>
        </TableLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center_horizontal"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:id="@+id/text_view_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>



</LinearLayout>