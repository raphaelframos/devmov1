<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetalheNotaActivity">

    <TextView
        android:text="Nome da disciplina"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center_horizontal"
        android:text="Nome do professor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView android:layout_width="wrap_content"
                android:text="Nota 1"
                android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/text_view_nota1"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow>

            <TextView android:layout_width="wrap_content"
                android:text="Nota 2"
                android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/text_view_nota2"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow>

            <TextView android:layout_width="wrap_content"
                android:text="Nota 3"
                android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/text_view_nota3"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow>

            <TextView android:layout_width="wrap_content"
                android:text="Nota 4"
                android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/text_view_nota4"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow>

            <TextView android:layout_width="wrap_content"
                android:text="MÃ©dia"
                android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/text_view_media"
                android:layout_height="wrap_content"/>
        </TableRow>
    </TableLayout>

</LinearLayout>