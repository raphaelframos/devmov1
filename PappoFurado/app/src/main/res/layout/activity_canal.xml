<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CanalActivity">

    <ListView
        android:id="@+id/listView_mensagens"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dip" />

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText_mensagem"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content">

            </EditText>


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_enviar"
                android:layout_gravity="center_vertical"
                app:fabSize="mini"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:src="@drawable/ic_action_enviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.google.android.material.floatingactionbutton.FloatingActionButton>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>